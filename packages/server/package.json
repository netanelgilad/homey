    "@types/webtorrent": "^0.98.4",
    "husky": "^0.14.3",
    "jest": "^22.4.4",
    "lint-staged": "^7.2.0",
    "react-devtools-core": "^3.2.3",
    "ts-jest": "^22.4.6",
    "typescript": "^3.0.1",
    "websocket": "^1.0.26"
