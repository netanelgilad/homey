{
  "name": "@homey/server",
  "version": "0.1.5",
  "main": "./lib/es2017/index.js",
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "start": "smartmon --inspect ./lib/es2017/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf ./lib",
    "test": "jest",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn clean && yarn build && cd ../frontend && yarn build && mv ./build ../server/lib/frontend"
  },
  "dependencies": {
    "@react-atoms/core": "^0.0.16",
    "axios": "^0.18.0",
    "base-64": "^0.1.0",
    "broadlinkjs-rm": "^0.6.0",
    "castv2-client": "^1.2.0",
    "chromecasts": "^1.9.1",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "gunzip-maybe": "^1.4.1",
    "immutable": "^3.8.2",
    "lodash": "^4.17.10",
    "lowdb": "^1.0.0",
    "mdns": "^2.4.0",
    "network-address": "^1.1.2",
    "react": "^16.4.1",
    "source-map-support": "^0.5.6",
    "srt-to-vtt": "^1.1.2",
    "subtitler": "^2.6.0",
    "swagger-tools": "^0.10.3",
    "thepiratebay": "^1.4.7",
    "tslib": "^1.9.2",
    "utf8": "^3.0.0",
    "uuid": "^3.3.2",
    "webtorrent": "^0.102.0"
  },
  "devDependencies": {
    "@botique/smartmon": "^0.1.7",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.0.0",
    "@types/lodash": "^4.14.110",
    "@types/lowdb": "^1.0.2",
    "@types/mongodb": "^3.1.3",
    "@types/nedb": "^1.8.5",
    "@types/node": "^10.5.2",
    "@types/react": "^16.4.6",
    "@types/webtorrent": "^0.98.4",
    "husky": "^0.14.3",
    "jest": "^23.4.2",
    "lint-staged": "^7.2.0",
    "prettier": "^1.14.2",
    "react-devtools-core": "^3.2.3",
    "ts-jest": "^23.1.3",
    "typescript": "^2.9.2",
    "websocket": "^1.0.26"
  },
  "browser": "./lib/es5/index.js",
  "lint-staged": {
    "*.{ts,tsx,js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
