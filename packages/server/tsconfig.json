{
  "compilerOptions": {
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "jsx": "react",
    "rootDir": "./src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": false,
    "importHelpers": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "target": "es2017",
    "pretty": true,
    "outDir": "./lib/es2017",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "typings/**/*"],
  "exclude": [
    "node_modules"
  ]
}
